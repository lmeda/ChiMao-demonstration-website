<style type="text/css">
  .simple_captcha{
    padding: 5px !important;
    background-color: #6896c7;
    margin-bottom: 1rem;
  }
  .simple_captcha,
  .simple_captcha div{display: table;}
  .simple_captcha .simple_captcha_field,
  .simple_captcha .simple_captcha_image{
    border: 2px solid #ccc;
    margin: .5rem;
    padding: 0px !important;
    background-color: white;
  }
  .simple_captcha .simple_captcha_image img{
    margin: 0px !important;
    padding: 0px !important;
    width: 110px !important;
  }
  .simple_captcha .simple_captcha_label{
    font-size: 18px;
    color: #e9ecef;
    text-align: center;
    display: block;
    padding: 7px;
  }
  .simple_captcha .simple_captcha_field input{
    width: 150px !important;
    height: 50px;
    font-size: 20px;
    text-align: center;
    border: 2px solid #81a4ca;
    background-color: #f8f9fa;
  }
</style>

<div class='simple_captcha'>
  <div class='simple_captcha_label'>
    <%= simple_captcha_options[:label] %>
  </div>

  <div class='simple_captcha_image simple_captcha_field'>
    <%= simple_captcha_options[:image] %>
    <%= simple_captcha_options[:field] %>
  </div>

  <!--
  <div class='simple_captcha_refresh_button'>
    <%= simple_captcha_options[:refresh_button] %>
  </div>
  -->
</div>
