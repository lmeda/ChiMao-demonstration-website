<nav id="main-nav">
	<ul class="first-nav">
		<li>
			<%= link_to "Home", root_path %>
		</li>
		<li>
			<%= link_to "About us", about_path %>
		</li>
		<li>
			<a href="/">Product</a>
			<ul>
				<%= render 'shared/sidebar/showcase' %>
				<%= render 'shared/sidebar/workbench' %>
			</ul>
		</li>
		<li>
			<%= link_to "News", news_path%>
		</li>
		<li>
			<% if current_administrator&.admin %>
				<%= link_to "Feedback", feedback_path %>
			<% else %>
				<%= link_to "Contact us", contact_chimao_path %>
			<% end %>
		</li>
		<% if current_administrator %>
			<li>
				<%= link_to "Log out", destroy_administrator_session_path, :method => :delete %>
			</li>
		<% end %>
	</ul>
</nav>
<div class="sticky-top fixed-top sidebar">
	<a class="toggle" href="#">
		<span></span>
	</a>
</div>


<script>
	(function($) {
		'use strict';

		// call our plugin
		var Nav = new hcOffcanvasNav('#main-nav', {
			disableAt: false,
			customToggle: '.toggle',
			levelSpacing: 40,
			navTitle: 'Menu',
			levelTitles: true,
			levelTitleAsBack: true,
			pushContent: '#container',
			labelClose: false
		});

		// add new items to original nav
		$('#main-nav').find('li.add').children('a').on('click', function() {
			var $this = $(this);
			var $li = $this.parent();
			var items = eval('(' + $this.attr('data-add') + ')');

			$li.before('<li class="new"><a href="#">'+items[0]+'</a></li>');

			items.shift();

			if (!items.length) {
				$li.remove();
			}
			else {
				$this.attr('data-add', JSON.stringify(items));
			}

			Nav.update(true); // update DOM
		});

		// sidebar settings update

		const update = function(settings) {
			if (Nav.isOpen()) {
				Nav.on('close.once', function() {
					Nav.update(settings);
					Nav.open();
				});

				Nav.close();
			}
			else {
				Nav.update(settings);
			}
		};

		$('.actions').find('a').on('click', function(e) {
			e.preventDefault();

			var $this = $(this).addClass('active');
			var $siblings = $this.parent().siblings().children('a').removeClass('active');
			var settings = eval('(' + $this.data('sidebar') + ')');

			if ('theme' in settings) {
				$('body').removeClass().addClass('theme-' + settings['theme']);
			}
			else {
				update(settings);
			}
		});

		$('.actions').find('input').on('change', function() {
			var $this = $(this);
			var settings = eval('(' + $this.data('sidebar') + ')');

			if ($this.is(':checked')) {
				update(settings);
			}
			else {
				var removeData = {};
				$.each(settings, function(index, value) {
					removeData[index] = false;
				});

				update(removeData);
			}
		});
	})(jQuery);
</script>