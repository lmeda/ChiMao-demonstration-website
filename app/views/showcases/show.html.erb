<div class="card">
  <div class="card-header bg-transparent">
    <h3 class="text-center" style="color: #24394e;"><%= @showcase.title %>（<%= (@showcase.category).name %>）</h3>
  </div>
  <div class="card-body" style="padding-top: 10px;">
    <div class="row">
      <div class="col-lg-5">
        <%= image_tag(@showcase.product_url(:thumb), style: "width:100%;border: 1px solid #dae0e5;") if @showcase.product_url.present? %>
        <button type="button" class="btn btn-primary" style="margin-top: 10px;text-align: center;" data-toggle="modal" data-target="#portfolioModal1">
          Specific
        </button>
      </div>
      <div class="col-lg-7" style="padding: 20px;">
        <h5 class="card-title" style="color: cadetblue;">產品型號：<%= @showcase.model_number %></h5>
        <p class="card-text"><%= simple_format(@showcase.description, style: "color: #6c757d;width:100%;") %></p>
      </div>
    </div>
  </div>
</div>

<% if current_administrator&.admin %>
  <%= link_to "Edit", edit_showcase_path(@showcase), class: "btn btn-warning" %>
  <%= link_to "Delete", showcases_path(@showcase), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
<% end %>

<div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="close-modal" data-dismiss="modal">
        <div class="lr">
          <div class="rl"></div>
        </div>
      </div>
      <div class="container-fluid">
        <div class="row">
          <div class="modal-body">
            <!--
            <h2 class="text-uppercase">Spree Installation</h2>
            <p class="item-intro text-muted">Setup spree for a client with ecommerce requirements</p>
            -->
            <%= image_tag(@showcase.specification_url(:thumb), style: "width:100%") if @showcase.specification_url.present? %>
            <!--
            <p>Spree is a rails gem and I know it well!</p>
            <ul class="list-inline">
              <li>Date: April 2020</li>
              <li>Client: Google</li>
              <li>Category: Capitalism</li>
            </ul>
            -->
            <button class="btn btn-primary" data-dismiss="modal" type="button">
              <i class="fas fa-times"></i>
              Close Project
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>