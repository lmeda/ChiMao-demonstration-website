<%= simple_form_for @standard do |f| %>
  <%= f.input :title %>
  <%= f.input :model_number %>
  <%= f.input :capacity %>
  <%= f.input :voltage %>
  <%= f.input :temperature %>
  <%= f.input :compressor %>
  <%= f.input :annex, as: :text %>
  <%= f.label :category_id, "Category" %>
	<% Category.all.each do |c| %>
		<%= f.radio_button :category_id, c.id %> <%= c.name %>
	<% end %>

  <div class="buttons">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Cancel", :back, class: "btn btn-secondary" %>
  </div>
<% end %>